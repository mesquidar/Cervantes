@using Cervantes.CORE
@model IEnumerable<Cervantes.CORE.Vuln>

@{
    ViewBag.Title = "Vulnerabilities";
}


    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-bug"></i> Vulnerabilities</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item" localize-content>Vulnerabilities</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>

    <!-- Main content -->
    <section class="content">
       <div class="card">
    <div class="card-body">

    
         
                <!--Table-->
                <table id="vulnResults" class="table table-bordered table-hover" width="100%">
                    <!--Table head-->
            <thead>
                        <tr>
                            <th localize-content>Name</th>
                            <th localize-content>Project</th>
                            <th localize-content>CVE</th>
                            <th localize-content>Risk</th>
                            <th localize-content>Status</th>
                            <th localize-content>Category</th>
                            <th localize-content>Created Date</th>
                            <th localize-content>Options</th>                           
                        </tr>
                    </thead>
                    <!--Table head-->
                    <!--Table body-->
            <tbody>

                        @foreach (var vuln in Model)
                        {
                            <tr>
                                <td>@vuln.Name</td>
                                <td><a class="btn btn-outline-dark" asp-area="" asp-controller="Project" asp-action="Details" asp-route-id="@vuln.ProjectId" localize-content><i class="fas fa-folder"></i> @vuln.Project.Name</a></td>
                                <td>@vuln.cve</td>
                                @switch(vuln.Risk)
                                                                        {
                                                                            case VulnRisk.Info:
                                                                                <td><span class="badge badge-info"><i class="fas fa-info-circle"></i> @vuln.Risk</span></td>
                                                                                break;
                                                                            case VulnRisk.Low:
                                                                                 <td><span class="badge badge-success"><i class="fas fa-exclamation"></i> @vuln.Risk</span></td>
                                                                                break;
                                                                            case VulnRisk.Medium:
                                                                                <td><span class="badge badge-warning"><i class="fas fa-exclamation"></i> @vuln.Risk</span></td>
                                                                                break;
                                                                            case VulnRisk.High:
                                                                                <td><span class="badge badge-danger"><i class="fas fa-exclamation-circle"></i> @vuln.Risk</span></td>
                                                                                break;
                                                                            case VulnRisk.Critical:
                                                                                <td><span class="badge badge-danger"><i class="fas fa-exclamation-triangle"></i> @vuln.Risk</span></td>
                                                                                break;
                                                                            default:
                                                                                <td><span class="badge badge-light">@vuln.Risk</span></td>
                                                                                break;
                                
                                                                        }
                                <td>@vuln.Status</td>
                                <td>@vuln.VulnCategory.Name</td>
                                <td>@vuln.CreatedDate.ToUniversalTime()</td>
                                @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                                {
                                    <td>
                                        <a asp-area="" asp-controller="Vuln" asp-action="Details" asp-route-id="@vuln.Id" class="btn btn-tool">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a class="btn btn-tool" asp-area="" asp-controller="Vuln" asp-action="Edit" asp-route-id="@vuln.Id" localize-content><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-tool" asp-area="" asp-controller="Vuln" asp-action="Delete" asp-route-id="@vuln.Id" localize-content ><i class="fas fa-trash"></i></a>
                                    </td>

                                }
                                else
                                {
                                    <a asp-area="" asp-controller="Vuln" asp-action="Details" asp-route-id="@vuln.Id" class="btn btn-tool">
                                        <i class="fas fa-eye"></i>
                                        </a>
                                }

                            </tr>
                        }

                    </tbody>
                    <!--Table body-->
        </table>
                <!--Table-->
            
        </div>
        </div>
    </section>
  @section Scripts{
<script>
        $(document).ready(function () {
        $('#vulnResults').DataTable({
            "responsive": true
        });
        $('.dataTables_length').addClass('bs-select');
    });

</script>
      }
    




