@using System.Net
@model Cervantes.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-user"></i> @Model.FullName</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item active" localize-content>Details</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>
    
    <!-- Main content -->
    <section class="content">

              <div class="card-header p-0 border-bottom-0">
                <ul class="nav nav-tabs" id="custom-tabs-tab" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" id="custom-tabs-details-tab" data-toggle="pill" href="#custom-tabs-details" role="tab" aria-controls="custom-tabs-details" aria-selected="true" localize-content>Details</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="custom-tabs-four-projects-tab" data-toggle="pill" href="#custom-tabs-projects" role="tab" aria-controls="custom-tabs-projects" aria-selected="false" localize-content>Projects</a>
                  </li>
                </ul>
              </div>
              <div class="card-body">
                <div class="tab-content" id="custom-tabs-tabContent">
                  <div class="tab-pane fade active show" id="custom-tabs-details" role="tabpanel" aria-labelledby="custom-tabs-details-tab">
                      <div class="row">
                          <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                              <dl>
                                  <dt><h4 localize-content>Position</h4></dt>
                                  <hr>
                                  <dd>@Html.DisplayFor(model => model.Position)</dd>
                                  <dt> <h4 localize-content>Description</h4></dt>
                                  <hr>
                                  <dd>@Html.DisplayFor(model => model.Description)</dd>
                                  <dt><h4 localize-content>Contact Email</h4></dt>
                                  <hr>
                                  <dd>@Html.Raw(@WebUtility.HtmlDecode(Model.Description))</dd>
                              </dl>
                                            

                          </div>

                          <div class="col-12 col-md-12 col-lg-4 order-1 order-md-2">    
                              
                                  <div align="center">
                                        <img src="@Url.Content(Model.Avatar)" alt="LogoClient" height="200" width="200" />
                                        <dt><h4 localize-content>Username</h4></dt>
                                          <hr>
                                          <dd>@Html.DisplayFor(model => model.UserName)</dd>
                                          <dt> <h4 localize-content>Email</h4></dt>
                                          <hr>
                                          <dd>@Html.DisplayFor(model => model.Email)</dd>
                                          <hr>
                                          <dt> <h4 localize-content>Email Confirmed</h4></dt>
                                          <dd>@Html.DisplayFor(model => model.EmailConfirmed)</dd>
                                          <hr />
                                          <dt> <h4 localize-content>2FA Enabled?</h4></dt>
                                          <dd>@Html.DisplayFor(model => model.TwoFactorEnabled)</dd>

                                  </div>
                              


                          </div>
                             
                       </div>

                    

                             

  


                       </div>


                      <div class="tab-pane fade" id="custom-tabs-projects" role="tabpanel" aria-labelledby="custom-tabs-projects-tab">
