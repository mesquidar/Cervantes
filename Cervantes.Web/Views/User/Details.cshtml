@using System.Net
@model Cervantes.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-user"></i> @Model.FullName</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item active" localize-content>Details</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>
    
    <!-- Main content -->
    <section class="content">
        
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-2">
  
              <!-- Profile Image -->
              <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                  <div class="text-center">
                    @if(Model.Avatar != null){
                      <img class="profile-user-img img-fluid img-circle"
                      src="@Url.Content(Model.Avatar)"
                      alt="LogoClient">
                    }
                    
                         else
                          {
                           <i class="fas fa-user fa-5x"></i>

                        }
                  </div>
  
                  <h3 class="profile-username text-center">@Model.FullName</h3>
                  <dt><p localize-content>Username</p></dt>
                  <hr>
                  <dd>@Html.DisplayFor(model => model.UserName)</dd>
                  <dt> <p localize-content>Email</p></dt>
                  <hr>
                  <dd>@Html.DisplayFor(model => model.Email)</dd>
             
                  <dt> <p localize-content>Role</p></dt>
                  <hr />
                  @switch(Model.Option)
                    {
                        case "Admin":
                            <dd><span class="badge badge-danger">@Html.DisplayFor(model => model.Option)</span></dd>
                            break;
                        case "SuperUser":
                             <dd><span class="badge badge-warning">@Html.DisplayFor(model => model.Option)</span></dd>
                            break;
                        case "User":
                            <dd><span class="badge badge-info">@Html.DisplayFor(model => model.Option)</span></dd>
                            break;
                        case "Client":
                            <dd><span class="badge badge-success">@Html.DisplayFor(model => model.Option)</span></dd>
                            break;
                        default:
                            <dd><span class="badge badge-light">@Html.DisplayFor(model => model.Option)</span></dd>
                            break;

                    }                   


                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-10">
              <div class="card">
                <div class="card-header p-2">
                  <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#details" data-toggle="tab">Details</a></li>
                    <li class="nav-item"><a class="nav-link" href="#projects" data-toggle="tab">Projects</a></li>
                  </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                  <div class="tab-content">
                    <div class="active tab-pane" id="details">
                      <dl>
                        <dt><p localize-content>Position</p></dt>
                        <hr>
                        <dd>@Html.DisplayFor(model => model.Position)</dd>

                        <dt><p localize-content>Phone Number</p></dt>
                        <hr>
                        <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <dt><p localize-content>2FA Enabled?</p></dt>
                        <hr>
                        <dd>@Html.DisplayFor(model => model.TwoFactorEnabled)</dd>

                        <dt> <p localize-content>Description</p></dt>
                        <hr>
                        <dd>@Html.Raw(@WebUtility.HtmlDecode(Model.Description))</dd>
                        
                    </dl>
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="projects">
                                                @if(Model.Project.FirstOrDefault() != null){
                            <!--Table-->
                            <table id="projectResults" class="table table-bordered table-hover" width="100%">
                                <!--Table head-->
                                <thead>
                                    <tr>
                                        <th localize-content>Name</th>
                                        <th localize-content>Client</th>
                                        <th localize-content>Type</th>
                                        <th localize-content>Status</th>
                                        <th localize-content>Start Date</th>
                                        <th localize-content>End Date</th>
                                            @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                                            {
                                                <th localize-content>Options</th>
                                            }                             
                                    </tr>
                                </thead>
                                <!--Table head-->
                                <!--Table body-->
                                <tbody>

                                    @foreach (var project in Model.Project)
                                    {
                                        <tr>
                                            <td>                  
                                                <a asp-controller="Project" asp-action="Details" asp-route-id="@project.Id" localize-content><span class="btn btn-outline-dark btn-sm"><i class="fas fa-folder"></i> @project.Name</span></a>                       
                                            </td>
                                             <td><a asp-controller="Client" asp-action="Details" asp-route-id="@project.ClientId" localize-content><span class="btn btn-outline-dark btn-sm"><i class="fas fa-briefcase"></i> @project.Client.Name</span></a></td>
                                            <td>@project.ProjectType</td>
                                            <td>@project.Status</td>
                                            <td>@project.StartDate</td>
                                            <td>@project.EndDate</td>
                                             @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                                                {
                                                    <td>
                                                        <a class="btn btn-outline-warning btn-sm" asp-controller="Client" asp-action="Edit" asp-route-id="@project.Id" localize-content><i class="fas fa-edit"></i> Edit</a>
                                                        <a class="btn btn-outline-danger btn-sm" asp-controller="Client" asp-action="Delete" asp-route-id="@project.Id" localize-content ><i class="fas fa-trash"></i> Delete</a>
                                                    </td>

                                                }

                                        </tr>
                                    }

                                </tbody>
                                <!--Table body-->
                            </table>
                            <!--Table-->
                            }

                    </div>
                    <!-- /.tab-pane -->
  
                  </div>
                  <!-- /.tab-content -->
                </div><!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          
    <a class="btn btn-default" asp-controller="User" asp-action="Index" localize-content>Back</a>

        @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
        {
            <a class="btn btn-outline-warning" asp-area="" asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id" localize-content><i class="fas fa-edit"></i> Edit</a>

        }
          <!-- /.row -->
        </div><!-- /.container-fluid -->   



    



</section>

           
                        