@model LogViewModel

@{
    ViewData["Title"] = "System Logs";
}
@{
    if (TempData["deleted"] != null)
    {
<div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>Client deleted successfully!</strong>
            
        </div>
    }

    if (TempData["created"] != null)
    {
        <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>Client created successfully!</strong>
            
        </div>
    }

    if (TempData["edited"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>Client edited successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }

}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-eye"></i> System Logs</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Admin</a></li>
              <li class="breadcrumb-item active" localize-content>System Logs</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>

    <!-- Main content -->
    <section class="content">
        
<div class="card">
    <div class="card-body">

    
        <!--Table-->
        <table id="logResults" class="table table-bordered table-hover" width="100%">

            <!--Table head-->
            <thead>
                <tr>
                    <th localize-content>Id</th>
                    <th localize-content>Created On</th>
                    <th localize-content>Level</th>
                    <th localize-content>Message</th>
                    <th localize-content>Stack Trace</th>
                    <th localize-content>Exception</th>
                    <th localize-content>Logger</th> 
                    <th localize-content>Url</th> 
                </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>

                @foreach(var log in Model.Logs)
                {
                   switch (log.Level)
                   {
                        case "Debug":
                        <tr class="bg-light">
                                <td class="bg-light">@log.Id</td>
                                <td class="bg-light">@log.CreatedOn/td>
                                <td class="bg-light">@log.Level</td>
                                <td class="bg-light">@log.Message</td>
                                <td class="bg-light">@log.StackTrace</td> 
                                <td class="bg-light">@log.Exception</td>
                                <td class="bg-light">@log.Logger</td>
                                <td class="bg-light">@log.Url</td>
                            </tr>
                                    break;
                        case "Info":
                         <tr class="bg-info">
                                <td class="bg-info">@log.Id</td>
                                <td class="bg-info">@log.CreatedOn/td>
                                <td class="bg-info">@log.Level</td>
                                <td class="bg-info">@log.Message</td>
                                <td class="bg-info">@log.StackTrace</td> 
                                <td class="bg-info">@log.Exception</td>
                                <td class="bg-info">@log.Logger</td>
                                <td class="bg-info">@log.Url</td>
                            </tr>
                        break;
                        case "Error":
                            <tr class="bg-danger">
                                <td class="bg-danger">@log.Id</td>
                                <td class="bg-danger">@log.CreatedOn/td>
                                <td class="bg-danger">@log.Level</td>
                                <td class="bg-danger">@log.Message</td>
                                <td class="bg-danger">@log.StackTrace</td> 
                                <td class="bg-danger">@log.Exception</td>
                                <td class="bg-danger">@log.Logger</td>
                                <td class="bg-danger">@log.Url</td>
                                </tr>
                                break;
                            case "Warn":
                            <tr class="bg-warning">
                                <td class="bg-warning">@log.Id</td>
                                <td class="bg-warning">@log.CreatedOn/td>
                                <td class="bg-warning">@log.Level</td>
                                <td class="bg-warning">@log.Message</td>
                                <td class="bg-warning">@log.StackTrace</td> 
                                <td class="bg-warning">@log.Exception</td>
                                <td class="bg-warning">@log.Logger</td>
                                <td class="bg-warning">@log.Url</td>
                                </tr>
                                break;
                        }
                }
                            
                    
                

            </tbody>
            <!--Table body-->
        </table>
        <!--Table-->
        <a asp-area="" asp-controller="Log" asp-action="Export" localize-content class="btn btn-primary btn-sm"><i class="nav-icon fas fa-download"></i><p>Export</p></a>
         <a asp-area="" asp-controller="Log" asp-action="Delete" localize-content class="btn btn-danger btn-sm"><i class="nav-icon fas fa-trash"></i><p>Delete</p></a>

        </div>
        
        </div>
    </section>
    <!-- /.content -->
  <!-- /.content-wrapper -->

  @section Scripts{
<script>

    $(document).ready(function () {
        $('#logResults').DataTable({
            "responsive": true
        }
                    );
        $('.dataTables_length').addClass('bs-select');
    });


</script>
}

