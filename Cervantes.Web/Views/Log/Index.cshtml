@model IEnumerable<Cervantes.CORE.Log>

@{
    ViewData["Title"] = "System Logs";
}
@{
    if (TempData["deleted"] != null)
    {
<div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>Client deleted successfully!</strong>
            
        </div>
    }

    if (TempData["created"] != null)
    {
        <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>Client created successfully!</strong>
            
        </div>
    }

    if (TempData["edited"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>Client edited successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }

}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-file-import"></i> System Logs</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Admin</a></li>
              <li class="breadcrumb-item active" localize-content>System Logs</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>

    <!-- Main content -->
    <section class="content">
        
<div class="card">
    <div class="card-body">

    
         @if(Model.FirstOrDefault() != null){
        <!--Table-->
        <table id="logResults" class="table table-bordered table-hover" width="100%">
            <!--Table head-->
            <thead>
                <tr>
                    <th localize-content>Id</th>
                    <th localize-content>Created On</th>
                    <th localize-content>Level</th>
                    <th localize-content>Message</th>
                    <th localize-content>Stack Trace</th>
                    <th localize-content>Exception</th>
                    <th localize-content>Logger</th> 
                    <th localize-content>Url</th> 
                </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>

                @foreach (var log in Model)
                {
                   switch (log.Level)
                   {
                        case "DEBUG":
                                    break;
                        case "INFO":
                         <tr class="table-info">
                                <td>@log.Id</td>
                                <td>@log.CreatedOn/td>
                                <td>@log.Level</td>
                                <td>@log.Message</td>
                                <td>@log.StackTrace</td> 
                                <td>@log.Exception</td>
                                <td>@log.Logger</td>
                                <td>@log.Url</td>
                            </tr>
                        break;
                        case "ERROR":
                            <tr class="table-danger">
                                <td>@log.Id</td>
                                <td>@log.CreatedOn/td>
                                <td>@log.Level</td>
                                <td>@log.Message</td>
                                <td>@log.StackTrace</td> 
                                <td>@log.Exception</td>
                                <td>@log.Logger</td>
                                <td>@log.Url</td>
                            </tr>
                         break;
                   }
                            
                    
                }

            </tbody>
            <!--Table body-->
        </table>
        <!--Table-->
        }


        </div>
        </div>
    </section>
    <!-- /.content -->
  <!-- /.content-wrapper -->

  @section Scripts{
<script>

    $(document).ready(function () {
        $('#logResults').DataTable({
            "responsive": true
        }
                    );
        $('.dataTables_length').addClass('bs-select');
    });


</script>
}

