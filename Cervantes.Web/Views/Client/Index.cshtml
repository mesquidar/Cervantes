@model IEnumerable<Cervantes.CORE.Client>

@{
    ViewData["Title"] = "Clients";
}

@{
    if (TempData["deleted"] != null)
    {
        <div class="alert alert-dismissible alert-success fade show" role="alert">
    <strong localize-content>Client deleted successfully!</strong>
    <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
      </button>
</div>
    }

    if (TempData["created"] != null)
    {
        <div class="alert alert-dismissible alert-success fade show" role="alert">
            <strong localize-content>Client created successfully!</strong>
            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
              </button>
        </div>
    }

    if (TempData["edited"] != null)
    {
        <div class="alert alert-dismissible alert-success fade show" role="alert">
            <strong localize-content>Client edited successfully!</strong>
            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
              </button>
        </div>
    }
}

<ol class="breadcrumb">
  <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
  <li class="breadcrumb-item active" localize-content>Clients</li>
</ol>

<div class="row">
            <div class="col-sm-10 col-12">
                <h1 localize-content><i class="fas fa-briefcase"></i> Clients</h1>
            </div>
            <div class="col-sm-2 col-12">
        @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
        {
            <a class="btn btn-outline-dark" asp-area="" asp-controller="Client" asp-action="Create" localize-content><i class="fas fa-plus"></i> Create</a>
        }
    </div>
            <hr />
        </div>
    


@if (TempData["vacio"] != null)
{
    <div class="alert alert-danger" role="alert">
        @Html.Encode(TempData["empty"])
    </div>
}

<div class="row">
    <div class="col-md-12">
        @if(Model.FirstOrDefault() != null){
        <!--Table-->
        <table id="clientResults" class="table table-bordered table-hover" width="100%">
            <!--Table head-->
            <thead class="bg-dark text-light">
                <tr>
                    <th localize-content>Name</th>
                    <th localize-content>Description</th>
                    <th localize-content>URL</th>
                    <th localize-content>Contact Name</th>
                    <th localize-content>Contact Email</th>
                    <th localize-content>Contact Phone</th>
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                        {
                            <th localize-content>Options</th>
                        }                             
                </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>

                @foreach (var client in Model)
                {
                    <tr>
                        <td>                  
                            <a asp-controller="Client" asp-action="Details" asp-route-id="@client.Id" localize-content><span class="btn btn-outline-dark btn-sm"><i class="fas fa-briefcase"></i> @client.Name</span></a>                       
                        </td>
                        <td>@client.Description</td>
                        <td><a href="@client.Url">@client.Url</a></td>
                        <td>@client.ContactName</td>
                        <td><a href="mailto:@client.ContactEmail">@client.ContactEmail</a></td>
                        <td>@client.ContactPhone</td>
                         @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                            {
                                <td>
                                    <a class="btn btn-outline-warning btn-sm" asp-controller="Client" asp-action="Edit" asp-route-id="@client.Id" localize-content><i class="fas fa-edit"></i> Edit</a>
                                    <a class="btn btn-outline-danger btn-sm" asp-controller="Client" asp-action="Delete" asp-route-id="@client.Id" localize-content ><i class="fas fa-trash"></i> Delete</a>
                                </td>

                            }

                    </tr>
                }

            </tbody>
            <!--Table body-->
        </table>
        <!--Table-->
        }
        @if(Model.FirstOrDefault() == null)
        {
            <div class="alert alert-dismissible alert-info">
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              <h4 class="alert-heading">Warning!</h4>
              <p class="mb-0">Best check yo self, you're not looking too good. Nulla vitae elit libero, a pharetra augue. Praesent commodo cursus magna, <a href="#" class="alert-link">vel scelerisque nisl consectetur et</a>.</p>
            </div>
        }

    </div>

</div>
@section Scripts{
<script>

    $(document).ready(function () {
        $('#clientResults').DataTable({
            "responsive": true
        });
        $('.dataTables_length').addClass('bs-select');
    });


</script>
}