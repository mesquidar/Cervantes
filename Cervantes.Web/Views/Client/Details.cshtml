@using System.Net
@model Cervantes.CORE.Client

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
            <div class="col-sm-10 col-12">
                <h1><i class="fas fa-briefcase"></i> @Html.DisplayFor(model => model.Name)</h1>
            </div>
            <div class="col-sm-2 col-12">
        @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
        {
            <a class="btn btn-outline-warning" asp-area="" asp-controller="Client" asp-action="Edit" asp-route-id="@Model.Id" localize-content><i class="fas fa-edit"></i> Edit</a>

        }
    </div>
            <hr />
        </div>
    
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-4">
            <span class="badge bg-dark" localize-content>Contact Name</span>
            @Html.DisplayFor(model => model.ContactName)
        </div>
        <div class="col-md-4">
            <span class="badge bg-dark" localize-content>Contact Phone</span>
            @Html.DisplayFor(model => model.ContactPhone)
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <span class="badge bg-dark" localize-content>Contact Email</span>
            @Html.DisplayFor(model => model.ContactEmail)
        </div>
        <div class="col-md-4">
            <span class="badge bg-dark">Url</span>
            @Html.DisplayFor(model => model.Url)
        </div>
    </div>

</div>
<HR />
<span class="badge bg-dark" localize-content>@Html.DisplayNameFor(model => model.Description)</span>
<dt class = "col-sm-12">
    

    @Html.Raw(@WebUtility.HtmlDecode(Model.Description))
</dt>

<div>
    <a class="btn btn-light" asp-action="Index" localize-content>Back</a>
</div>
