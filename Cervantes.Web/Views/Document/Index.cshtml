@using System.Net
@model IEnumerable<Cervantes.CORE.Document>

@{
    ViewData["Title"] = "Clients";
}
@{
    if (TempData["deleted"] != null)
    {
<div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>Client deleted successfully!</strong>
            
        </div>
    }

    if (TempData["created"] != null)
    {
        <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>Client created successfully!</strong>
            
        </div>
    }

    if (TempData["edited"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>Client edited successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }

}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fa fa-file"></i> Documents</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item active" localize-content>Documents</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>

    <!-- Main content -->
    <section class="content">
        
<div class="card">
    <div class="card-body">

   
        <!--Table-->
        <table id="clientResults" class="table table-bordered table-hover" width="100%">
            <!--Table head-->
            <thead>
                <tr>
                    <th localize-content>Name</th>
                    <th localize-content>Description</th>
                    <th localize-content>Uploaded By</th>
                    <th localize-content>Options</th>

                    </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>

                @foreach (var doc in Model)
                {
                    <tr>
                        <td>                  
                             @doc.Name                    
                        </td>
                        <td>@Html.Raw(@WebUtility.HtmlDecode(doc.Description))</td>
                        <td>@doc.User.FullName</td>
                         @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                            {
                                <td>
                                    <a asp-area="" asp-controller="Document" asp-action="Details" asp-route-id="@doc.Id" class="btn btn-tool">
                                    <i class="fas fa-eye"></i>
                                  </a>
                                   <a asp-area="" asp-controller="Document" asp-action="Edit" asp-route-id="@doc.Id" class="btn btn-tool">
                                    <i class="fas fa-pen"></i>
                                  </a>
                                   <a asp-area="" asp-controller="Document" asp-action="Delete" asp-route-id="@doc.Id" class="btn btn-tool">
                                    <i class="fas fa-trash"></i>
                                  </a>
                                    
                                </td>

                            }
                            else
                            {
                                <a asp-area="" asp-controller="Document" asp-action="View" asp-route-id="@doc.Id" class="btn btn-tool">
                                    <i class="fas fa-eye"></i>
                                  </a>
                            }

                    </tr>
                }

            </tbody>
            <!--Table body-->
        </table>
        <!--Table-->


        </div>
        </div>
    </section>
    <!-- /.content -->
  <!-- /.content-wrapper -->

  @section Scripts{
<script>

    $(document).ready(function () {
        $('#clientResults').DataTable({
            "responsive": true
        });
        $('.dataTables_length').addClass('bs-select');
    });


</script>
}








    





