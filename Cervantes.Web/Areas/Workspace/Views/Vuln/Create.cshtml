@using Cervantes.CORE
@model VulnCreateViewModel

@{
    ViewData["Title"] = "Create Vuln";
}

    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-bug"></i> Create Vuln</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item" localize-content>Workspace</li>
              <li class="breadcrumb-item" localize-content>Vuln</li>
              <li class="breadcrumb-item active" localize-content>Create</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>
    <!-- Main content -->
    <section class="content">


  <div class="col-md-12">
              <form asp-area="Workspace" asp-controller="Vuln" asp-action="Create" method="post" enctype="multipart/form-data">

                <div class="card">
                  <div class="card-header p-2">
                    <ul class="nav nav-pills">
                      <li class="nav-item"><a class="nav-link active" href="#details" data-toggle="tab">Vuln Details</a></li>
                      <li class="nav-item"><a class="nav-link" href="#poc" data-toggle="tab">Exploitation</a></li>
                      <li class="nav-item"><a class="nav-link" href="#remediation" data-toggle="tab">Remediation</a></li>
                    </ul>
                  </div><!-- /.card-header -->
                  <div class="card-body">
                    <div class="tab-content">
                      <div class="active tab-pane" id="details">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <div class="form-group">
                                <label asp-for="Template" class="control-label"></label>
                                <input asp-for="Template" class="form-control" />
                                <span asp-validation-for="Template" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                              <div class="form-group">
                                <label asp-for="cve" class="control-label">CVE</label>
                                <input asp-for="cve" class="form-control" />
                                <span asp-validation-for="cve" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea id="description" asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Vuln Category</label>
                                @Html.DropDownListFor(m => m.VulnCategoryId, Model.VulnCatList, "--Select--", new { @class = "form-control" })
                            </div> 
                             <div class="form-group">
                                <label class="control-label">Vuln Risk</label>
                                @Html.DropDownListFor(model => model.Risk, Html.GetEnumSelectList<VulnRisk>(),new { @class = "form-control" })
                            </div> 
                             <div class="form-group">
                                <label class="control-label">Vuln Status</label>
                                @Html.DropDownListFor(model => model.Status, Html.GetEnumSelectList<VulnStatus>(),new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label asp-for="Impact" class="control-label"></label>
                                <textarea id="description" asp-for="Impact" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Impact" class="text-danger"></span>
                            </div>
                             <div class="form-group">
                                <label asp-for="TargetId" class="control-label">Target</label>
                                @Html.DropDownListFor(m => m.TargetId, Model.TargetList, "--Select--", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label asp-for="CVSS3" class="control-label"></label>
                                <input id="description" asp-for="CVSS3" class="form-control" rows="4"></input>
                                <span asp-validation-for="CVSS3" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CVSSVector" class="control-label"></label>
                                <input id="description" asp-for="CVSSVector" class="form-control" rows="4"></input>
                                <span asp-validation-for="CVSSVector" class="text-danger"></span>
                            </div>
                      </div>

                      <div class="tab-pane" id="poc">
                          <div class="form-group">
                                <label asp-for="ProofOfConcept" class="control-label"></label>
                                <textarea id="description" asp-for="ProofOfConcept" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="ProofOfConcept" class="text-danger"></span>
                            </div>

                      </div>

                         <!-- /.tab-pane -->
                      <div class="tab-pane" id="remediation">
                          <div class="form-group">
                                <label asp-for="Remediation" class="control-label"></label>
                                <textarea id="description" asp-for="Remediation" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Remediation" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Remediation Complexity</label>
                                @Html.DropDownListFor(model => model.RemediationComplexity, Html.GetEnumSelectList<RemediationComplexity>(),new { @class = "form-control" })
                            </div> 
                             <div class="form-group">
                                <label class="control-label">Remediation Priority</label>
                                @Html.DropDownListFor(model => model.RemediationPriority, Html.GetEnumSelectList<RemediationPriority>(),new { @class = "form-control" })
                            </div>
                      </div>
                      <!-- /.tab-pane -->
                      <!-- /.tab-pane -->
    
                    </div>
                    <!-- /.tab-content -->
                  </div><!-- /.card-body -->

           

                </div>
                <!-- /.card -->
                      <div class="form-group">
                      <a class="btn btn-default" asp-area="Workspace" asp-controller="Target" asp-action="Index" localize-content>Back</a>
                    <input type="submit" class="btn btn-dark" localize-content>Create</input>
                </div>
                </form>
              </div>
              </section>